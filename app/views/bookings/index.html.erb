
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/originals/26/1c/87/261c873caad55938277c6491f6daec90.jpg);">

<section style="margin-top: 60px;">
	<div class="container">
		<div class="show-booking-dashboard">
			<h2> My trips </h2>
			<% if @bookings_user.any? %>
			<div class="row">
				<% @bookings_user.each do |booking| %>

			<div class="card" id="card-booking">
				<ol class="copy" data-booking-id="<%= booking.id %>" style="list-style: none;">
					<li class="copy"> Name: <%= booking.user.name %> <%booking.user.name %></li>
					<li class="copy"> Spaceship name <%= booking.spaceship.name %> </li>
					<li class="copy"> Booking start date : <%= booking.departure_date %></li>
					<li class="copy"> Booking end date : <%= booking.arrival_date %></li>
					<li class="copy"> Booking total : $<%= booking.total_price %></li>
				</ol>

			        <div class="row justify-content-around mt-2">
			        	<div class="nounderline">
			        	 <%= link_to "Edit", edit_booking_path(booking.id), class: "btn-booking" %> 
						</div>
			        	 <%= link_to "X", booking, data: {confirm: "Are you sure?"}, method: :delete, remote: true, class: "remove-image", style:"display: inline;" %>
			        </div>
			   
			</div>
			<% end %>
		</div>
		<% else %>
		<p> You don't have booking for the moment </p>
		<% end %>
	</div>
</div>
</section>
</div>